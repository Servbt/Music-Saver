<script>
    // POST request made for youtube API for displaying a single youtube video
        // this functionality is in localPlaylist, Playlist, and results.ejs
    $(function () {
        $(document).on("click", ".video-link", function (e) {
            console.log("this was clicked on from playlist")
            var h2text = $(this).find("h2").text();
            $.post("https://music-saver-3b51d79cbfa1.herokuapp.com/video", { "video": h2text },
                function (data, status) {
                    window.location.replace("http://localhost:3000/video")
                    console.log("Data: " + data + "\nStatus: " + status);
                });
        });
    });
</script>