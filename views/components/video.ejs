<!-- This is the display for a singular video from the GET "/video" Route -->
<body class="video-card border border-bottom border-5">

        <h1 class="srch-res pt-5"><%= video.snippet.title %></h1>
        <h2 class="srch-res fs-6"><%= video.id %></h2>
        <div class="video-player"><%-video.player.embedHtml %></div>
        <button class="add-video btn btn-dark srch-btn mb-3">Add Video to Playlist</button> 
        <!-- <div class="border border-bottom border-5 cust-card"></div> -->

    <script>
        // POST request made to Client Side for saving a video to an Array for LocalStorage
                $(function () {
                $(".add-video").on("click", function (e) {
                    $.post("http://localhost:3000/add-video", 
                        { 
                        videoTitle: "<%=video.snippet.title%>",
                        videoID: "<%=video.id%>",
                        videoHtml: "<%=video.player.embedHtml%>",
                        videoThumbnail:"<%=video.snippet.thumbnails.medium.url%>",
                    },
                        function (data, status) {
                            console.log("Data: " + data + "\nStatus: " + status);
                        });
                });
            });
    </script>
</body>
